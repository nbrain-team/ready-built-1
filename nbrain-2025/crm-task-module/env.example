# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/your_database_name

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production

# Google AI Configuration (for AI features)
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key  # Alternative to GOOGLE_API_KEY

# Google Drive Configuration (for document storage)
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=path/to/service-account-key.json

# Email Configuration (optional, for email sync)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/callback

# OpenAI Configuration (optional, alternative to Google AI)
OPENAI_API_KEY=your-openai-api-key

# Application Settings
ENVIRONMENT=development
DEBUG=True
CORS_ORIGINS=["http://localhost:3000"]

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=["pdf", "doc", "docx", "txt", "png", "jpg", "jpeg"]
